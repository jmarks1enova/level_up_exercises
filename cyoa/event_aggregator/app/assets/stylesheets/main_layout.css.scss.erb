@import "defs";

body {
  background-color: $deep-chicago-blue !important;
}

#PageContainer {
  background-color: $page-color;
}

#ContentArea {
  padding-right: 10px;
  padding-left: 10px;
}

#BodyArea {
  background-color: $light-chicago-blue;
}

#LeftBarContent {
  padding-left: 10px;
  padding-right: 5px;
}

#ContentAreaContainer {
  background-color: $page-color;
}

.page-title {
  font: 60px fancypants;
  text-shadow: -6px -6px 15px black;
  color: $light-chicago-blue;
}

.event-categories {
  color: gray;
}

img.event-image {
  height: 200px;
  width: 200px;
}

#TopBarTitleArea {
  div.page-title-border {
    display: block;
    position: relative;
    margin-left: -15px;
    margin-right: -15px;
    min-height: 15px;
    background-image: linear-gradient(to right, white, blue);
  }

  .ptb-top {
    margin-top: -15px;
  }

  #PageTitle {
    margin-top: -15px;
    display: flex;
    align-items: center;

    #PageTitleHeader {
      background-image: linear-gradient(to right, blue, white);
    }

    .chicago-flag-star {
      display: inline;
      width: 40px;
      height: 40px;
      margin-top: -15px;
      margin-left: 10px;
    }  
  }

}

#LoginPane {
  font-size: 8pt;
  background-color: $chicago-blue;
  color: white;

  input[type=text],input[type=password],input[type=email] {
    border-radius: 10px;
  }
}

