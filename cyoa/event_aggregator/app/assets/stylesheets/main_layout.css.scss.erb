@import "defs";

body {
  background-color: $deep-chicago-blue !important;
}

#PageContainer {
  background-color: $page-color;
}

#ControlBar {
  #PageNav {
    margin-bottom: 0px;
    background-color: $light-chicago-blue;
  }

  li {
    padding-top: 0em;
    padding-bottom: 0em;

  }
  // margin-bottom: -35px;
  
  /* & > div {
    padding-left: 0px;
    padding-right: 0px;
  } */

  div.menu-item-active {
    background-color: white;
  }
}

#ContentArea {
  padding-right: 10px;
  padding-left: 10px;
  margin-bottom: 2em;
}

#BodyArea {

  background-color: $light-chicago-blue;
}

#LeftBarContent {
  padding-left: 10px;
  padding-right: 5px;
}

#ContentAreaContainer {
  background-color: $page-color;
}

.page-title {
  font: 60px fancypants;
  text-shadow: -6px -6px 15px black;
  color: $light-chicago-blue;
}

.event-categories {
  color: gray;
}

img.event-image {
  height: 200px;
  width: 200px;
}

#TopBar {
  background-color: $deep-chicago-blue;
}

#TopBarTitleArea {
  #PageTitle {
    display: flex;
    align-items: center;
    background-image:
      linear-gradient(to right, $deep-chicago-blue 40%, white 70%, $deep-chicago-blue);

    a {
      color: inherit;
      text-decoration: none;
    }

    #PageTitleGraphic {
      position: relative;
      top: 0px;
      left: 0px;
    }

    .chicago-flag-star {
      display: inline;
      width: 40px;
      height: 40px;
      margin-top: -15px;
      margin-left: 10px;
    }
  }

}

#LoginPane {
  font-size: 8pt;
  background-color: $deep-chicago-blue;
  color: white;

  input {
    color: black;
  }

  .user-name { color: yellow; }

  h2 { font-size: 15px; }

  a {
    color: inherit;
    text-decoration: none;
  }

  input[type=text],input[type=password],input[type=email] {
    border-radius: 10px;
  }
}

div.section {
  .section-title {
    text-align: center;
    color: $deep-chicago-blue;
    background-color: $light-chicago-blue;
    font-style: italic;
  }
}

#BottomBar {
  padding-left: 10px;
  padding-right: 10px;
  background-color: $light-chicago-blue;

  ul {
    list-style-type: none;
    padding-left: 0px;
  }
}

.hard-to-see {
  opacity: 0.15;
  font-size: 50%;
}
